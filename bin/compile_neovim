#!/bin/bash

cd ~/src/neovim

# update to latest version
git fetch
git reset --hard FETCH_HEAD
git clean -df

# Clean up previous compiles
make clean
make distclean

# Compile neovim
make cmake CMAKE_EXTRA_FLAGS="-DCMAKE_BUILD_TYPE=Release -Wno-error -D_FORTIFY_SOURCE=1" CFLAGS="-D_FORTIFY_SOURCE=1"
make
